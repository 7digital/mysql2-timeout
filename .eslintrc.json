{
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "commonjs": true,
    "mocha": true,
    "es6": true
  },
  "parserOptions": { "ecmaVersion": 9 },
  "rules": {
    "indent": ["error", 2, {
      "MemberExpression": "off",
      "SwitchCase": 1
    }],
    "linebreak-style": [ "error", "unix" ],
    "quotes": [ "error", "single" ],
    "semi": [ "error", "always" ],
    "no-console": "off"
  }
}
